// serie mas4.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main(){
	int i,suma=0,n;
	cout << "========================================"<< endl;
	do{
		cout <<"\nIngrese el valor de N:";
		cin >> n;
	} while (n<=0);
	for(i=1;i<=n;i=i+4){
		suma=suma + i;
	}
	cout << "\n======================================" << endl;
	cout << "\nLa suma es: " << suma;
	cout << "\n\n=====================================" << endl;
	getch();
}
